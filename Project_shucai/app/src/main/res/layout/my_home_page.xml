<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting"
                android:layout_width="@dimen/home_setting_width"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/info_margin"
                android:background="@mipmap/setting"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/arrow_down"
                android:padding="@dimen/info_margin"
                android:text="@string/user_nick_name"
                android:drawablePadding="6dp"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/shopping_car"
                android:layout_width="@dimen/home_setting_height"
                android:layout_height="@dimen/home_setting_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/info_margin"
                android:layout_marginRight="@dimen/info_margin"
                android:background="@mipmap/shopping_car" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/large_head"
            android:layout_height="@dimen/large_head"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/info_margin"
            android:layout_marginTop="@dimen/info_margin"
            android:src="@mipmap/head_portrait_big" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/watch_margin_fans"
                android:text="3关注"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

            <TextView
                android:id="@+id/fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0粉丝"
                android:textColor="@color/title_font_color"
                android:textSize="@dimen/content_font_size" />

        </LinearLayout>


        <ListView
            android:id="@+id/home_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_margin_line"
            android:background="@color/lines" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/home_page"
            android:gravity="center_horizontal"
            android:text="首页" />

        <TextView
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/shop"
            android:gravity="center_horizontal"
            android:text="铺子" />

        <TextView
            android:id="@+id/user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/me"
            android:gravity="center_horizontal"
            android:text="我" />
    </LinearLayout>
</RelativeLayout>